{
  "name": "ilan-arch",
  "version": "1.0.0",
  "description": "Architecture for project with multiple riotjs apps",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all build-pdf-img-viewer-uploader-imgs build-pdf-img-viewer-uploader open-pdf-img-viewer-uploader",

    "build-pdf-img-viewer-uploader": "webpack --progress --colors --display-modules --config src/pdf-img-viewer-uploader/webpack.config.js",
    "build-pdf-img-viewer-uploader-imgs": "find src -iname *.svg  ! -path \"src/all/*\" | sed -e \"p;s/src\\/[^\\/]*/dist\\/pdf-img-viewer-uploader/\" | xargs -n2 cp",
    "open-pdf-img-viewer-uploader": "node open.js dist/pdf-img-viewer-uploader/index.html",

    "build-popup": "webpack --progress --colors --display-modules --config src/popup/webpack.config.js",
    "build-popup-imgs": "find src -iname *.svg  ! -path \"src/all/*\" | sed -e \"p;s/src\\/[^\\/]*/dist\\/popup/\" | xargs -n2 cp",
    "open-popup": "node open.js dist/popup/index.html",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Ilan Copelyn",
  "license": "MIT",
  "devDependencies": {
    "UploaderJS": "https://github.com/ilanc/uploader.git#0.9.6",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-riot": "^1.1.0",
    "font-awesome": "^4.7.0",
    "html-webpack-plugin": "^2.28.0",
    "jquery": "^3.2.1",
    "npm-run-all": "^4.0.2",
    "open": "0.0.5",
    "riot": "^3.4.4",
    "riot-hot-reload": "^1.0.0",
    "riot-tag-loader": "^1.0.0",
    "style-loader": "^0.18.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  }
}
